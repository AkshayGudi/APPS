<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.calc.app.calciapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL1"
        android:orientation="horizontal">

    <EditText
        android:id="@+id/valueField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"/>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/LL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LL1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/one"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:onClick="buttonClicked"
                android:tag="@string/number" />

            <Button
                android:id="@+id/two"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:onClick="buttonClicked"
                android:tag="@string/number" />

            <Button
                android:id="@+id/three"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:onClick="buttonClicked"
                android:tag="@string/number" />


            <Button
                android:id="@+id/subtract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:onClick="buttonClicked"
                android:tag="@string/operator" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/LL3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LL2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/four"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:onClick="buttonClicked"
                android:tag="@string/number" />


            <Button
                android:id="@+id/five"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:onClick="buttonClicked"
                android:tag="@string/number" />

            <Button
                android:id="@+id/Six"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:onClick="buttonClicked"
                android:tag="@string/number"/>

            <Button
                android:id="@+id/Add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:onClick="buttonClicked"
                android:tag="@string/operator" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/LL4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LL3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Seven"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:onClick="buttonClicked"
                android:tag="@string/number" />


            <Button
                android:id="@+id/Eight"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:onClick="buttonClicked"
                android:tag="@string/number"/>


            <Button
                android:id="@+id/Nine"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:onClick="buttonClicked"
                android:tag="@string/number"/>


            <Button
                android:id="@+id/Multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:onClick="buttonClicked"
                android:tag="@string/operator"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LL4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Zero"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:onClick="buttonClicked"
                android:tag="@string/number" />
            <Button
                android:id="@+id/equal"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:text="="
                android:onClick="buttonClicked"
                android:tag="@string/operator" />

            <Button
                android:id="@+id/Divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:onClick="buttonClicked"
                android:tag="@string/operator" />

        </LinearLayout>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
